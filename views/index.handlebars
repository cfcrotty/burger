<div class="row">
  <div class="col-md-3">
    <div class="row indexSection">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <h2>Add a Burger</h2>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form class="create-form">
              <div class="form-group">
                <label for="name">Burger Name:</label>
                <input style="width:100%;" type="text" id="name" name="name">
              </div>
              <div class="form-group">
                <label for="desc">Burger Description:</label>
                <textarea style="width:100%;" rows="5" id="description" name="description"></textarea>
              </div>

              <button type="submit" class="btn btn-primary primary">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row"><div class="col-md-12"></div></div>
  </div>

  <div class="col-md-9">
    <div class="row indexSection">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1>Eat Some Burgers!</h1>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="row text-center">
              <div class="col-md-12">
                <h2>Burgers to Devour!</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block dev=true}}
                {{/unless}}
                {{/each}}
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="row text-center">
              <div class="col-md-12">
                <h2>Devoured!</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <ul>
                  {{#each burgers}}
                  {{#if devoured}}
                  {{> burgers/burger-block dev=false}}
                  {{/if}}
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row"><div class="col-md-12"></div></div>
  </div>

</div>