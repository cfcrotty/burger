<div class="row">
	<div class="col-md=12 makeCenter text-center">
		<b>{{burger_name}}</b><br>
		{{description}}<br>
		{{#if devoured}}
		{{#if favorite}}
		<button class="favorite btn btn-success" data-id="{{id}}" data-favorite="0">
			Not Anymore
		</button>
		{{else}}
		<button class="favorite btn btn-success" data-id="{{id}}" data-favorite="1">
			Favorite
		</button>
		{{/if}}
		<button class="delete btn btn-danger" data-id="{{id}}">
			Delete
		</button>
		{{else}}
		<button class="change-devour btn btn-secondary" data-id="{{id}}" data-devour="{{dev}}">
			Devour
		</button>
		{{/if}}
	</div>
</div>